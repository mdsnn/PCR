<div id="<%= dom_id post %>" class="bg-white rounded-lg p-6">
  <!-- Title -->
  <div class="mb-4">
    <h3 class="text-lg font-semibold text-gray-900 mb-1">
      <%= post.title %>
    </h3>
  </div>

  <!-- Content -->
  <div class="prose prose-sm text-gray-700">
    <p class="whitespace-pre-wrap"><%= post.content %></p>
  </div>
</div>