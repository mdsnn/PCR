generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(uuid())
  username       String?   @unique
  email          String   @unique
  password       String
  refreshToken   String?
  resetToken     String?
  resetExpiresAt DateTime?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
